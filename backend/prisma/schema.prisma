// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ContatoUs {
  id         String   @id @default(cuid())
  nome       String
  phone      String
  email      String   @unique
  interested String
  message    String
  createdAt  DateTime @default(now())
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String
  description String
  content     String
  createdAt   DateTime @default(now())
  author      String
  img_capa    String
}
